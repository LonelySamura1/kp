<Window x:Class="KP.Forms.MasterForms.MasterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KP.Forms.MasterForms"
        mc:Ignorable="d"
        Title="Мастер" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <WrapPanel>
            <Button Content="Выйти" Margin="5,5,0,0" Click="Button_Click"/>
        </WrapPanel>
        <WrapPanel Margin="10,45,0,0">
            <Button Content="Закрыть" Height="30" Click="Button_Click_1"/>
            <Button Content="Добавить материал" Margin="100,0,0,0" Click="Button_Click_2"/>
        </WrapPanel>
        <StackPanel Margin="0,60,0,0">
            <DataGrid Height="250" Margin="10,20,10,0" x:Name="OrdersGrid" AutoGenerateColumns="True" IsReadOnly="True" Background="#FFC7BDBD" Foreground="#FF231E20" Opacity="0.9" HorizontalGridLinesBrush="#FF3C3939" VerticalGridLinesBrush="#FF3C3939" CanUserResizeRows="False" BorderBrush="White"/>
        </StackPanel>
    </Grid>
</Window>
