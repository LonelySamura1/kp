<Window x:Class="KP.Forms.AdminForms.MaterialsAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KP.Forms.AdminForms"
        mc:Ignorable="d"
        Title="Новый материал" Height="182" Width="312">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="50,10,0,0">
                <Label Content="Название: "/>
                <TextBox x:Name="NameBox" Height="20" Width="150"/>
            </WrapPanel>
            <WrapPanel Margin="21,0,0,0">
                <Label Content="Тип материала: "/>
                <TextBox x:Name="TypeBox" Height="20" Width="150"/>
            </WrapPanel>
            <WrapPanel Margin="64,0,0,0">
                <Label Content="Кол-во: "/>
                <TextBox x:Name="CountBox" Height="20" Width="150"/>
            </WrapPanel>
            
            <WrapPanel>
                <Button Content="Добавить" x:Name="AddButton" Margin="80,30,0,0" Click="AddButton_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
