<Window x:Class="KP.Forms.AdminForms.Services"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KP.Forms.AdminForms"
        mc:Ignorable="d"
        Title="Услуги" Height="185" Width="417.5" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <WrapPanel Margin="5">
                <TextBox x:Name="SeviceNameBox" Width="100" Margin="10,0,0,0"/>
                <Button x:Name="AddServButton" Content="Добавить" Margin="10,0,0,0" Click="AddServButton_Click"/>
                <Button x:Name="DeleteBtn" Content="Удалить" Margin="10,0,0,0" Click="DeleteBtn_Click"/>
            </WrapPanel>
        <ListBox Margin="5" Height="100" x:Name="ServicesList"/>
        </StackPanel>
    </Grid>
</Window>
